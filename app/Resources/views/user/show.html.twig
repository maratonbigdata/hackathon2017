{% extends 'base.html.twig' %}

{% block body %}
    <h1>Postulante</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Rut</th>
                <td>{{ user.rut }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Resumen Personal</th>
                <td>{{ user.brief }}</td>
            </tr>
            <tr>
                <th>Perfil</th>
                <td>{{ user.profile.name }}</td>
            </tr>
            {% if is_granted(['ROLE_ADMIN']) %}
                <tr>
                    <th>Isactive</th>
                    <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-info btn1" role="button" >Usuarios</a>

    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary btn2" role="button">Editar</a>

    <input type="submit" value="Eliminar" class="btn btn-danger btn2" role="button">

{% endblock %}
