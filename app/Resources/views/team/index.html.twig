{% extends 'base.html.twig' %}

{% block body %}
    <h1>Equipos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Fecha de creación</th>
                <th>Fecha modificiación</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td>{{ team.name }}</td>
                <td>{{ team.status }}</td>
                <td>{% if team.created %}{{ team.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if team.modified %}{{ team.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <td><a href="{{ path('team_show', { 'id': team.id }) }}" class="btn btn-info btn-sm" role="button">Ver</a></td>
                    <td><a href="{{ path('team_edit', { 'id': team.id }) }}" class="btn btn-primary btn-sm" role="button">Editar</a></td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
